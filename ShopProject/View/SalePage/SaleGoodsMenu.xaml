<Page x:Class="ShopProject.Views.SalePage.SaleGoodsMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SalePage" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SaleMenu">
    <Page.DataContext>
        <local:SaleGoodsMenuViewModel></local:SaleGoodsMenuViewModel>
    </Page.DataContext>

    <Grid x:Name="Grid" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Widght,UpdateSourceTrigger=PropertyChanged}"/>
            <!-- Таблиця -->
            <ColumnDefinition Width="320"/>
            <!-- Панель оплати -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="{Binding Height , UpdateSourceTrigger=PropertyChanged}"></RowDefinition>
        </Grid.RowDefinitions>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="SizeChanged" SourceObject="{Binding ElementName=Grid}">
                <i:InvokeCommandAction Command="{Binding UpdateSize}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Border CornerRadius="10" 
            BorderBrush="LightGray" 
            BorderThickness="1" 
            SnapsToDevicePixels="True" 
            ClipToBounds="True">
        
            <!-- 📋 Таблиця з товарами -->
            <DataGrid x:Name="dataGrid"
              ItemsSource="{Binding Goods, UpdateSourceTrigger=PropertyChanged}"
              AutoGenerateColumns="False"
              ColumnWidth="*"
              HeadersVisibility="Column"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              FontSize="16"
              Margin="10"
              RowHeight="40"
              GridLinesVisibility="None"
              AlternatingRowBackground="#F9F9F9"
              RowBackground="White"
              BorderBrush="LightGray"
              BorderThickness="1"
              SelectionMode="Single"
              SelectionUnit="FullRow"
              HorizontalGridLinesBrush="#E0E0E0"
              VerticalGridLinesBrush="#E0E0E0">

                <!-- Стиль заголовків -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="CadetBlue"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="BorderBrush" Value="#517a7b"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Стиль рядків -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <!-- Виділений рядок -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <!-- Наведення мишки -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Штрихкод" Binding="{Binding Code}" Width="120"/>
                    <DataGridTextColumn Header="Назва товару" Binding="{Binding NameProduct}" Width="*"/>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Articule}" Width="100"/>
                    <DataGridTextColumn Header="Кількість" Binding="{Binding Count}" Width="100"/>
                    <DataGridTextColumn Header="Одиниці" Binding="{Binding Unit.ShortNameUnit}" Width="100"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="100"  />
                    <DataGridTextColumn Header="Знижка" Binding="{Binding Sales}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!-- 💰 Панель оплати -->
        <Border Grid.Column="1" Margin="20,0,0,0" CornerRadius="10" Background="White" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 🔎 Пошук -->
                <Label Content="Штрихкод:" FontSize="16" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1"
                  FontSize="16"
                  Height="35"
                  VerticalAlignment="Center"
                  Text="{Binding BarCodeSearch, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                     <i:EventTrigger EventName="TextChanged">
                         <i:InvokeCommandAction Command="{Binding SearchBarCodeGoodsCommand}" />
                     </i:EventTrigger>
                 </i:Interaction.Triggers>
                </TextBox>

                <!-- 💳 Тип оплати -->
                <Label Content="Тип оплати:" FontSize="16" FontWeight="Bold" Grid.Row="2" Margin="0,10,0,5"/>
                <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <ComboBox ItemsSource="{Binding TypeOplatu}" 
                       SelectedIndex="{Binding SelectIndex}" 
                       FontSize="16" Width="180" Height="35"/>
                    <StackPanel Margin="10,0,0,0">
                        <CheckBox Content="Друкувати чек" 
                           IsChecked="{Binding DrawingCheck}" Margin="0,0,0,5"/>
                        <CheckBox Content="Фіскальний чек" 
                           IsChecked="{Binding IsFiscalCheck}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 💲 Суми -->
                <StackPanel Grid.Row="4" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal" >
                        <Label Content="Сума чеку:" FontSize="16" FontWeight="Bold"/>
                        <Label Content="{Binding SumaOrder, StringFormat='{}{0:0.00}'}" 
                        FontSize="16" Foreground="#E53935" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"  Margin="0,5,0,0">
                        <Label Content="Одержана сума:" FontSize="16" FontWeight="Bold"/>
                        <TextBox Text="{Binding SumaUser, StringFormat='{}{0:0.00}'}"
                          FontSize="16" Width="120" TextAlignment="Right"/>
                    </StackPanel>
                </StackPanel>

                <!-- 🔘 Кнопки -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Оплатити" Command="{Binding PrintingCheckCommand}" 
                     Background="#4CAF50" Foreground="White" 
                     Width="140" Height="40" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Button Content="Очистити чек" Command="{Binding ClearFieldDataGid}" 
                     Background="#f44336" Foreground="White" 
                     Width="140" Height="40" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
