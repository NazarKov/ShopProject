<Page x:Class="ShopProject.Views.SalePage.WorkShiftMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SalePage"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:template="clr-namespace:ShopProject.Resource.template"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkShiftMenu">
    <Page.DataContext>
        <local:WorkShiftMenuViewModel></local:WorkShiftMenuViewModel>
    </Page.DataContext>
    <Page.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                        Background="{TemplateBinding Background}" >
                            <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="{Binding Widght , UpdateSourceTrigger=PropertyChanged}"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" MaxHeight="65"></RowDefinition>
            <RowDefinition Height="55" MaxHeight="65"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="100" MaxHeight="130"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="SizeChanged" SourceObject="{Binding ElementName=Grid}">
                <i:InvokeCommandAction Command="{Binding UpdateSizeCommand}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Button x:Name="button"  Content="Відкрити зміну" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="0" Grid.RowSpan="2" Command="{Binding OpenShiftCommand}" VerticalAlignment="Stretch"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button1" Content="Новий чек" HorizontalAlignment="Stretch"  Margin="10,10,10,10" Grid.Row="2" VerticalAlignment="Stretch" Command="{Binding OpenNewCheck}"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>

        <Button x:Name="button7" Content="Друк останього чеку" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="3" VerticalAlignment="Stretch" Command="{Binding PrintLastCheckCommand}"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button2" Content="Повернення товару"  HorizontalAlignment="Stretch"  Margin="10,10,10,10" Grid.Row="4" Command="{Binding OpenReturnGoodsMenuCommand}" VerticalAlignment="Stretch"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button3" Content="Службове внесення" HorizontalAlignment="Stretch"  Margin="10,10,10,10" Grid.Row="5" VerticalAlignment="Stretch" Command="{Binding OfficialDepositMoneyCommand}"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button4" Content="Службове видача" HorizontalAlignment="Stretch"  Margin="10,10,10,10" Grid.Row="6" VerticalAlignment="Stretch" Command="{Binding OfficialIssuanceModeyCommand}"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button5" Content="Закрити змінну" HorizontalAlignment="Stretch"  Margin="10,10,10,10" Grid.Row="7" Command="{Binding CloseShiftCommand}" VerticalAlignment="Stretch"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"/>
        <Button x:Name="button6" Content="Назад до вибору каси" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="8" Visibility="{Binding VisibilitiExitButton}" Command="{Binding ExitWorkShiftMenuCommand}" VerticalAlignment="Stretch"
                  Background="#E0E0E0"
                  Foreground="#333"
                  BorderBrush="#BDBDBD"
                  BorderThickness="1"
                  Cursor="Hand"></Button>
        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="15,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition MinWidth="150" MaxWidth="300"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Label x:Name="label" Grid.Column="0" FontSize="20" Content="Ваш ПРРО" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label1" Grid.Column="0" FontSize="16" Content="{Binding StatusShift}" Foreground="{Binding StatusColor ,UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>

            <Label x:Name="label2" Grid.Column="1" FontSize="16" Content="ФН" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label3" Grid.Column="1" FontSize="14" Content="{Binding FNumber}"   HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>

            <Label x:Name="label4" Grid.Column="2" FontSize="16" Content="ГО" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label5" Grid.Column="2" FontSize="14" Content="{Binding EconomicUnit}" HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>

            <Label x:Name="label6" Grid.Column="3" FontSize="16" Content="Касир" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label7" Grid.Column="3" FontSize="14" Content="{Binding Seller}"  HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>

            <Label x:Name="label8" Grid.Column="4" FontSize="20" Content="Онлайн" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label9" Grid.Column="4" FontSize="16" Content="{Binding StatusOnline}"  HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>

            <Label x:Name="label10" Grid.Column="5" FontSize="16" Content="Режим тестування" Visibility="{Binding TestMode}" Foreground="Red"  HorizontalAlignment="Left" Margin="0,10,0,10" VerticalAlignment="Bottom"/>
        </Grid>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="6" BorderBrush="Gainsboro" BorderThickness="0.5" HorizontalAlignment="Left"></Border>
        <TabControl x:Name="tabControl" Grid.Column="1" Grid.Row="1" Grid.RowSpan="9" TabStripPlacement="Top" Padding="15"
                    BorderBrush="Gainsboro" SelectedIndex="{Binding SelectedTabItem, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Tabs, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,25,0,0" >
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
      

        </TabControl>
        <Grid x:Name="InputBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="10"
            Visibility="{Binding VisibleFirstDialogWindow , UpdateSourceTrigger=PropertyChanged}">
           
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                    MinHeight="150"
                    MinWidth="300"
                    Background="White" 
                    BorderBrush="Black" 
                    BorderThickness="0.5"
                    HorizontalAlignment="Center" 
                    Padding="5"
                    VerticalAlignment="Center">
                <StackPanel Margin="0,35,0,0">

                    <TextBlock
                        Text="Сума внесених коштів"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"/>

                    <TextBox
                            x:Name="InputTextBox"
                            MinWidth="180"
                            Height="38"
                            Margin="0,0,0,20"
                            Padding="8,0"
                            TextAlignment="Right"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="{Binding Cash, StringFormat=0.00}"
                            Background="#F3F4F6"
                            BorderThickness="0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <!-- Основна дія -->
                        <Button
                            Content="Внести кошти" 
                            Command="{Binding OkFirstDialogWindowCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}" />

                        <!-- Відміна -->
                        <Button
                            Content="Відмінити"
                            Width="110"
                            Height="40"
                            Margin="5"
                            Command="{Binding CancelFirstDialogWindowCommand}"
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="InputBox2" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="10" 
            Visibility="{Binding VisibleSecondDialogWindow , UpdateSourceTrigger=PropertyChanged}">

            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinHeight="150"
                MinWidth="300"
                Background="White" 
                BorderBrush="Black" 
                BorderThickness="0.5"
                HorizontalAlignment="Center" 
                Padding="5"
                VerticalAlignment="Center">
                <StackPanel Margin="0,35,0,0">

                    <TextBlock
                        Text="Сума виданих коштів"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"/>

                    <TextBox
                        MinWidth="180"
                        Height="38"
                        Margin="0,0,0,20"
                        Padding="8,0"
                        TextAlignment="Right"
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Text="{Binding Cash, StringFormat=0.00}"
                        Background="#F3F4F6"
                        BorderThickness="0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <!-- Основна дія -->
                        <Button
                        Content="Видати кошти" 
                        Command="{Binding OkSecondDialogWindowCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}"/>

                        <!-- Відміна -->
                        <Button
                        Content="Відмінити"
                        Width="110"
                        Height="40"
                        Margin="5"
                        Command="{Binding CancelSecondDialogWindowCommand}"
                        Background="Transparent"
                        Foreground="#6B7280"
                        BorderThickness="0"
                        Cursor="Hand"/>

                    </StackPanel>
                </StackPanel>

            </Border>
        </Grid>
        
    </Grid>
    
</Page>
