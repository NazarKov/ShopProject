<Window x:Class="ShopProject.View.AdminPage.UserPage.CreateUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopProject.ViewModel.AdminPage.UserPage"
        mc:Ignorable="d"
        Title="CreateUserView" Width="400" Height="520" ResizeMode="NoResize">
    <Window.DataContext>
        <local:CreateUserViewModel></local:CreateUserViewModel>
    </Window.DataContext>
    <Grid Height="520" Background="#FAFAFA">
        <Grid VerticalAlignment="Center"
          Height="{Binding SizeWindow, UpdateSourceTrigger=PropertyChanged}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Column="1" Text="Створення користувача"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#333" HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Кнопки вибору типу -->
            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,15" >
                <Button Content="З ключем"
                    Command="{Binding OpenPanelWithKeyCommand}"
                    Background="{Binding BackgroundButtonWihtKey}"
                    Foreground="White"
                    Width="120" Height="35"
                    FontWeight="SemiBold"
                    BorderThickness="0" />

                <Button Content="Без ключа"
                    Command="{Binding OpenPanelWithoutKeyCommand}"
                    Background="{Binding BackgroundButtonWithoutKey}"
                    Foreground="White"
                    Width="120" Height="35"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                     />
            </StackPanel>

            <!-- Поля вводу -->
            <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,10,0,0" >

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  >
                    <TextBlock Text="ПІБ:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <TextBox Width="200" Height="30"
                         Text="{Binding FullName}"
                         Padding="5"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  >
                    <TextBlock Text="Логін:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <TextBox Width="200" Height="30"
                         Text="{Binding Login}"
                         Padding="5"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  >
                    <TextBlock Text="Email:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <TextBox Width="200" Height="30"
                         Text="{Binding Email}"
                         Padding="5"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  >
                    <TextBlock Text="Пароль:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <TextBox Width="200" Height="30"
                             Padding="5"
                             Background="White"
                             BorderBrush="#DDD"
                             BorderThickness="1" 
                             Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <TextBlock Text="Посада:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <ComboBox Width="200" Height="30"
                          ItemsSource="{Binding UserRoles}"
                          SelectedIndex="{Binding SelectUserRole}"
                          DisplayMemberPath="NameRole"
                          Background="White"
                          BorderBrush="#DDD"
                          BorderThickness="1" />
                </StackPanel>

                <!-- Поля для ключа -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{Binding VisibilityFielKey}">
                    <TextBlock Text="Ключ ЕЦП:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <Grid Width="200" Height="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                             Text="{Binding PathKey, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5"
                             Background="White"
                             BorderBrush="#DDD"
                             BorderThickness="1" />
                        <Button Grid.Column="1"
                            Command="{Binding OpenFiLeKeyCommand}"
                            Background="#4CAF50"
                            BorderThickness="0" >
                            <Image Source="/Resource/Images/arrow.png" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Visibility="{Binding VisibilityFielKey}">
                    <TextBlock Text="Пароль ЕЦП:" Width="100" VerticalAlignment="Center" Foreground="#444"/>
                    <TextBox Width="200" Height="30"
                             Padding="5"
                             Background="White"
                             BorderBrush="#DDD"
                             BorderThickness="1" 
                             Text="{Binding PasswordKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>

            <!-- Кнопки дій -->
            <StackPanel Grid.Column="1" Grid.Row="9" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,20,0,0"  >
                <Button Content="Створити"
                    Command="{Binding CreateUserCommand}"
                    Background="#2196F3" Foreground="White"
                    Padding="10,5" Width="120" Height="35"
                    BorderThickness="0"
                     />

                <Button Content="Очистити"
                    Command="{Binding ClearWindowCommadn}"
                    Background="#9E9E9E" Foreground="White"
                    Padding="10,5" Width="120" Height="35"
                    BorderThickness="0"
                     />

                <Button Content="Вийти"
                    Command="{Binding ExitWindowCommand}"
                    Background="#F44336" Foreground="White"
                    Padding="10,5" Width="120" Height="35"
                    BorderThickness="0"
                     />
            </StackPanel>
        </Grid>
    </Grid>

</Window>
