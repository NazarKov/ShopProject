<Window x:Class="ShopProject.Views.AdminPage.UserData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopProject.ViewModel.AdminPage.UserPage"
        mc:Ignorable="d"
        Title="UserData" Height="530" Width="450">
    <Window.DataContext>
        <local:UserDataViewModel></local:UserDataViewModel>
    </Window.DataContext>
    <ScrollViewer>
        <Grid Margin="50">
            <Border Background="White" CornerRadius="12" Padding="30" 
                    BorderBrush="#e1e1e1" BorderThickness="1">
                <StackPanel> 
                    <TextBlock Text="Деталі профілю" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"/>
 
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Width="70" Height="70" Fill="#ccc" />
                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Role}" Foreground="Gray"/>
                        </StackPanel> 
                    </Grid>

                    <Separator/>
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Податковий номер" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Tin}" 
                                Foreground="Gray" 
                                Margin="0,3,0,0"/>
                        <Button Content="+ Додати електронну адресу" 
                                Foreground="#4CAF50" 
                                Background="Transparent" 
                                BorderThickness="0"
                                HorizontalAlignment="Left"
                                Cursor="Hand"/>
                    </StackPanel> 
                    
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Електронна пошта" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="example@store.com" 
                                   Foreground="Gray" 
                                   Margin="0,3,0,0"/>
                        <Button Content="+ Додати електронну адресу" 
                                   Foreground="#4CAF50" 
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand"/>
                    </StackPanel>
 
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Номер телефону" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="+380 93 282 2005" 
                                   Foreground="Gray" 
                                   Margin="0,3,0,0"/>
                        <Button Content="+ Додати номер телефону" 
                                   Foreground="#4CAF50" 
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand"/>
                    </StackPanel>
                    <Separator></Separator>
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Ключ ЕЦП" 
                                FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Status}" 
                                Foreground="Gray" 
                                Margin="0,3,0,0"/>
                        <Button Content="+ Додати електронну адресу" 
                                Foreground="#4CAF50" 
                                Background="Transparent" 
                                BorderThickness="0"
                                HorizontalAlignment="Left"
                                Cursor="Hand"/>
                    </StackPanel>
 
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Безпека" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Остання зміна пароля: 12.10.2025" 
                                   Foreground="Gray" 
                                   Margin="0,3,0,0"/>
                        <Button Content="Змінити пароль" 
                                   Foreground="#4CAF50" 
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand"/>
                    </StackPanel>
                    <Separator></Separator>
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="{Binding DateCreate}" 
                                Foreground="Gray" 
                                Margin="0,3,0,0"/>
                        <TextBlock Text="Дата останнього оновлення: 12.10.2025" 
                                Foreground="Gray" 
                                Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
