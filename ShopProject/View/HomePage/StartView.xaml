<Page x:Class="ShopProject.View.HomePage.StartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.HomePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartView">
    <Page.DataContext>
        <local:StartViewModel></local:StartViewModel>
    </Page.DataContext>
    <Grid Background="#F3F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="{Binding HeightGrid}"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.Row="1"
            Background="#FFFFFF"
            CornerRadius="12"
            Padding="20"
            BorderBrush="#D0D0D0"
            BorderThickness="1" >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
 
                <TextBlock Text="Налаштування підключення"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
 
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Label Content="URL бази даних:"
                       Foreground="#4A4A4A"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
                    <TextBox Width="180"
                         Text="{Binding Url}"
                         Background="#F7F7F7"
                         Foreground="#2E2E2E"
                         BorderBrush="#C0C0C0"
                         BorderThickness="1"
                         Padding="5" />
                    <Button Content="Авто пошук"
                        Command="{Binding ShowSettingAutoFindCommand}"
                        Margin="10,0,0,0"
                        Background="#DCE6F9"
                        Foreground="#1E3A8A"
                        Padding="6,3"
                        BorderBrush="#A5B4FC"
                        BorderThickness="1" 
                        Cursor="Hand"/>
                </StackPanel>
 
                <StackPanel Grid.Row="2"
                        Visibility="{Binding VisibilitySettingAutoFind}"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center">

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="IP Router:" Foreground="#4A4A4A" Width="100"/>
                        <TextBox Width="160" Text="{Binding IpRouter}" Background="#F7F7F7" Foreground="#2E2E2E"
                             BorderBrush="#C0C0C0" BorderThickness="1" Padding="5" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Port:" Foreground="#4A4A4A" Width="100"/>
                        <TextBox Width="160" Text="{Binding Port}" Background="#F7F7F7" Foreground="#2E2E2E"
                             BorderBrush="#C0C0C0" BorderThickness="1" Padding="5"  />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Min IP:" Foreground="#4A4A4A" Width="100"/>
                        <TextBox Width="160" Text="{Binding MinIPAddress}" Background="#F7F7F7" Foreground="#2E2E2E"
                             BorderBrush="#C0C0C0" BorderThickness="1" Padding="5"  />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Max IP:" Foreground="#4A4A4A" Width="100"/>
                        <TextBox Width="160" Text="{Binding MaxIPadress}" Background="#F7F7F7" Foreground="#2E2E2E"
                             BorderBrush="#C0C0C0" BorderThickness="1" Padding="5"  />
                    </StackPanel>

                    <Button Content="Пошук"
                        Command="{Binding AutoFindUrlCommand}"
                        Margin="0,10,0,0"
                        Background="#E3EFFE"
                        Foreground="#1E40AF"
                        Padding="6,3"
                        BorderBrush="#A5B4FC"
                        BorderThickness="1" 
                        Cursor="Hand"
                        Width="120"
                        HorizontalAlignment="Center"/>
                </StackPanel>
 
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Підключитися"
                        Command="{Binding ConnectCommand}"
                        Background="#DFF6DD"
                        Foreground="#166534"
                        Padding="6,3"
                        BorderBrush="#9FE2A1"
                        BorderThickness="1" 
                        Cursor="Hand"
                        Width="120"
                        Margin="0,0,10,0"/>
                    <Button Content="Вихід"
                        Background="#FDE2E1"
                        Foreground="#7F1D1D"
                        Padding="6,3"
                        BorderBrush="#FCA5A5"
                        BorderThickness="1" 
                        Cursor="Hand"
                        Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
