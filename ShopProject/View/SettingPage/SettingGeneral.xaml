<Page x:Class="ShopProject.Views.SettingPage.SettingGeneral"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SettingPage"
      mc:Ignorable="d" 
      d:DesignHeight="405" d:DesignWidth="535"
      Title="SettingGeneral">
    <Page.DataContext>
        <local:SettingGeneralViewModel></local:SettingGeneralViewModel>
    </Page.DataContext>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Margin="0,0,0,10">
            <TextBlock Text="Загальне"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#333"/>

            <Separator Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Секція -->
        <Border Grid.Row="1"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="6"
            Padding="15">

            <StackPanel>

                <TextBlock Text="Валідація полів"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#444"
                       Margin="0,0,0,10"/>

                <!-- Пункт 1 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Перевірка полів при створенні товару"
                           VerticalAlignment="Center"/>

                    <CheckBox Grid.Column="1"
                          IsChecked="{Binding IsValidCrateProduct}"
                          Command="{Binding UpdateFieldIsValidCreateProductCommand}"/>
                </Grid>
                <Separator></Separator>
                <!-- Пункт 2 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Перевірка полів при редагуванні товару"
                           VerticalAlignment="Center"/>

                    <CheckBox Grid.Column="1"
                          IsChecked="{Binding IsValidUpdateProduct}"
                          Command="{Binding UpdateFieldIsValidUpdateProductCommand}"/>
                </Grid>
                <Separator></Separator>
                <!-- Пункт 3 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Перевірка формування товару"
                           VerticalAlignment="Center"/>

                    <CheckBox Grid.Column="1"
                          IsChecked="{Binding IsValidFormationProduct}"
                          Command="{Binding UpdateFieldIsValidFormationProductCommand}"/>
                </Grid>
                <Separator></Separator>
            </StackPanel>
        </Border>

    </Grid>
</Page>
