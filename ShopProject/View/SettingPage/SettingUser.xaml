<Page x:Class="ShopProject.Views.SettingPage.SettingUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SettingPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingUser">
    <Page.DataContext>
        <local:SettingUserViewModel></local:SettingUserViewModel>
    </Page.DataContext>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Margin="0,0,0,12">
            <TextBlock Text="Профіль"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#333"/>

            <Separator Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Картка -->
        <Border Grid.Row="1"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8"
            Padding="20">

            <StackPanel>

                <!-- Логін -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Логін:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding Login}"
                           FontWeight="SemiBold"/>

                    <Button Grid.Column="2"
                        Content="Змінити пароль"
                        Padding="10,3"
                        Margin="10,0,0,0"
                        Background="CadetBlue"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand" />
                </Grid>

                <Separator Margin="0,10"/>

                <!-- ПІБ -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ПІБ:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding FullName}"/>
                </Grid>

                <!-- ІПН -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Податковий номер:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding TIN}"/>
                </Grid>

                <Separator Margin="0,10"/>

                <!-- КЕП -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Ключ ЕЦП:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding NameKey}"/>

                    <Button Grid.Column="2"
                        Content="Переглянути"
                        Padding="10,3"
                        Margin="10,0,0,0"
                        Background="CadetBlue"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand" />
                </Grid>

                <Separator Margin="0,10"/>

                <!-- Статус -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Статус користувача:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding Status}"
                           FontWeight="SemiBold"/>
                </Grid>

                <!-- Автовхід -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Автоматичний вхід:" Foreground="#555"/>
                    <CheckBox Grid.Column="1"
                          IsChecked="{Binding AutoLogin}"
                          VerticalAlignment="Center"/>
                </Grid>

                <!-- Дата -->
                <Grid Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Дата створення:" Foreground="#555"/>
                    <TextBlock Grid.Column="1"
                           Text="{Binding Create_At}"/>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</Page>
