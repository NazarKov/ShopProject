<Page x:Class="ShopProject.Views.SettingPage.SettingUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SettingPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingUser">
    <Page.DataContext>
        <local:SettingUserViewModel></local:SettingUserViewModel>
    </Page.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid Margin="30">

                <!-- Основний контейнер без обводки -->
                <StackPanel>

                    <!-- Заголовок + кнопка справа -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Профіль користувача"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                            Content="Редагувати"
                            Padding="10,4"
                            Margin="10,0,0,0"
                            Height="34" 
                            Background="CadetBlue"
                            Foreground="White"
                            VerticalAlignment="Top"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </Grid>

                    <Separator/>

                    <!-- ПІБ -->
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="ПІБ" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding FullName}" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Логін -->
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Логін" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Login}" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Податковий номер -->
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Податковий номер" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TIN}" Foreground="Gray"/>
                    </StackPanel>

                    <Separator Margin="0,15"/>

                    <!-- Ключ ЕЦП -->
                    <StackPanel>
                        <TextBlock Text="Ключ ЕЦП" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding NameKey}" Foreground="Gray"/>

                        <Button Content="Переглянути дані"
                            Margin="0,5,0,0"
                            Padding="6,2"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            Foreground="#2563EB"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </StackPanel>

                    <Separator Margin="0,15"/>

                    <!-- Безпека -->
                    <StackPanel>
                        <TextBlock Text="Безпека" FontWeight="SemiBold"/>
                        <CheckBox Content="Автоматичний вхід"
                              IsChecked="{Binding AutoLogin}"
                              Margin="0,5,0,0"/>

                        <Button Content="Змінити пароль"
                            Margin="0,5,0,0"
                            Padding="6,2"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            Foreground="#2563EB"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </StackPanel>

                    <Separator Margin="0,15"/>

                    <!-- Дати -->
                    <StackPanel>
                        <TextBlock Text="Дата створення"
                               FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Create_At}"
                               Foreground="Gray"/>
                    </StackPanel>

                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
