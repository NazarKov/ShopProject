<Page x:Class="ShopProject.View.SettingPage.SettingStorageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SettingPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingStorageView">
    <Page.DataContext>
        <local:SettingStorageViewModel></local:SettingStorageViewModel>
    </Page.DataContext>
    <Grid>
        <Border Background="White"
     Padding="15"
     CornerRadius="6">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel>
                    <TextBlock Text="Налаштування Прро"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#333"/>

                    <Separator Margin="0,10,0,15"/>
                </StackPanel>

                <!-- Контент -->
                <Border Grid.Row="1"
             Background="White"
             Padding="15"
             CornerRadius="6"
             BorderBrush="#E0E0E0"
             BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label x:Name="label2" Content="Довжина штрихкоду товару" HorizontalAlignment="Left" Grid.Row="0" Margin="0,15,0,15" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Stretch" Height="30" Margin="0,15,0,15"  Grid.Row="0" TextWrapping="Wrap" Text="{Binding ProductBarCodeLength}" VerticalAlignment="Center" />

                        <Label x:Name="label3" Content="Довжина штрихкоду сертифікату" HorizontalAlignment="Left" Grid.Row="1" Margin="0,15,0,15" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox3" Grid.Column="1" HorizontalAlignment="Stretch" Height="30" Margin="0,15,0,15"  Grid.Row="1" TextWrapping="Wrap" Text="{Binding SertificateBarCodeLength}" VerticalAlignment="Center" />


                        <Button x:Name="button"  Grid.Column="1"
                        Grid.Row="3"
                        Command="{Binding SaveSettingCommand}"
                        Margin="0,15,0,15"
                        Height="34"
                        Content="Зберегти налаштування"
                        Background="CadetBlue"
                        Foreground="White"
                        VerticalAlignment="Top"
                        BorderThickness="0"
                        Cursor="Hand"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
