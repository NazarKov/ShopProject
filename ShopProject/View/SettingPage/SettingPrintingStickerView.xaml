<Page x:Class="ShopProject.View.SettingPage.SettingPrintingStickerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.SettingPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPrintingStickerView">
    <Page.DataContext>
        <local:SettingPrintingStickerViewModel></local:SettingPrintingStickerViewModel>
    </Page.DataContext>
    <Grid>
        <Border Background="White"
                Padding="15"
                CornerRadius="6">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel>
                    <TextBlock Text="Налаштування друку Стікерів"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333"/>

                    <Separator Margin="0,10,0,15"/>
                </StackPanel>

                <!-- Контент -->
                <Border Grid.Row="1"
                        Background="White"
                        Padding="15"
                        CornerRadius="6"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Принтер -->
                        <TextBlock Text="Принтер для друку Стікерів"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5,0,15,0"/>

                        <ComboBox Grid.Row="2"
                                  Grid.Column="1"
                                  ItemsSource="{Binding Printer}"
                                  SelectedItem="{Binding SelectedPrinter}"
                                  Height="30"/>

                        <!-- Кнопка -->
                        <Button Grid.Row="4"
                                Grid.Column="1"
                                Command="{Binding PrintTestCheck}"
                                Margin="0,15,0,15"
                                Height="34"
                                Content="Друк пробної сторінки"
                                Background="CadetBlue"
                                Foreground="White"
                                        VerticalAlignment="Top"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        
                        <Button x:Name="button"  Grid.Column="1"
                            Grid.Row="3"
                            Command="{Binding SaveSettingCommand}"
                            Margin="0,15,0,15"
                            Height="34"
                            Content="Зберегти налаштування"
                            Background="CadetBlue"
                            Foreground="White"
                            VerticalAlignment="Top"
                            BorderThickness="0"
                            Cursor="Hand"/> 
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
