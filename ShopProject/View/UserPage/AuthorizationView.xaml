<Page x:Class="ShopProject.Views.UserPage.AuthorizationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopProject.ViewModel.UserPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">
    <Page.DataContext>
        <local:AuthorizationViewModel></local:AuthorizationViewModel>
    </Page.DataContext>
    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="*" MinHeight="450"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions> 
        <Border Background="#FFFFFF"
            Grid.Row="1"
            CornerRadius="15"
            Padding="40"
            Width="500"
            Height="420"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="#D0D0D0"
            BorderThickness="1" > 
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
 
                <TextBlock Text="Вхід у систему"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#2E2E2E"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>
 
                <Label Content="Логін"
                   FontSize="16"
                   Foreground="#4A4A4A"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   Margin="20,0,0,3"/>
                <TextBox Text="{Binding Login}"
                     Grid.Row="2" 
                     FontSize="16"
                     Padding="6"
                     Background="#F7F7F7"
                     BorderBrush="#C0C0C0"
                     BorderThickness="1"
                     Foreground="#2E2E2E"
                     HorizontalAlignment="Stretch" />
 
                <Label Content="Пароль"
                   FontSize="16"
                   Foreground="#4A4A4A"
                   Grid.Row="3"
                   HorizontalAlignment="Left"
                   Margin="20,15,0,3"/>
                <TextBox x:Name="PasswordBox" 
                         Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="4"
                         FontSize="16"
                         Padding="6"
                         Background="#F7F7F7"
                         BorderBrush="#C0C0C0"
                         BorderThickness="1"
                         Foreground="#2E2E2E"
                         HorizontalAlignment="Stretch" />
 
                <Button Content="Змінити пароль"
                    Command="{Binding OpenChangePasswordCommand}"
                    Grid.Row="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"
                    Width="140"
                    Background="Transparent"
                    Foreground="#2563EB"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
 
                <CheckBox Content="Автоматичний вхід"
                      IsChecked="{Binding AutoLogin}"
                      Grid.Row="5"
                      Margin="0,20,0,0"
                      Foreground="#4A4A4A"
                      FontSize="14"
                      HorizontalAlignment="Center"/>
 
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <Button Content="Вхід"
                        Command="{Binding LogInCommnad}"
                        Width="150"
                        Padding="6"
                        Background="#2563EB"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0" 
                        Cursor="Hand"/>
                    <Button Content="Вихід"
                        Command="{Binding ExitCommand}"
                        Width="150"
                        Padding="6"
                        Background="#E5E7EB"
                        Foreground="#1F2937"
                        FontSize="16"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1" 
                        Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid> 
</Page>
