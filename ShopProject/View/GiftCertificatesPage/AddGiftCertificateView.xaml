<Window x:Class="ShopProject.View.GiftCertificatesPage.AddGiftCertificateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopProject.ViewModel.GiftCertificatesPage"
        mc:Ignorable="d"
        Title="Добавити сертифікат"  Height="275" Width="415" ResizeMode="NoResize"
        Name="window">
    <Window.DataContext>
        <local:AddGiftCertificateViewMovel></local:AddGiftCertificateViewMovel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>  
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="Namelabel" Content="Назва сертифікату" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Margin="15,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameProduct" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Margin="15,40,0,0" Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="170"/>

        <Label x:Name="Codelabel" Content="Штрихкод сертифікату" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" Margin="15,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Code" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Margin="15,40,0,0" Text="{Binding Code,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="170"/>

        <Label x:Name="Pricelabel" Content="Ціна сертифікату" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="Price"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Margin="15,40,0,0" Text="{Binding Price,UpdateSourceTrigger=PropertyChanged,StringFormat='0.00'}" VerticalAlignment="Top" Width="170"/>

        <Label x:Name="countlabel" Content="опис сертифікату" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="count" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="15,40,0,0" Text="{Binding Description}" VerticalAlignment="Top" Width="170"/>
  
        <Button x:Name="buttonSave" Content="Добавити" Grid.Column="0" Grid.Row="2" Command="{Binding SaveGiftCertificateCommand}" HorizontalAlignment="Left" Margin="15,40,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="buttonClear" Content="Очистити" Grid.Column="0" Grid.Row="2" Command="{Binding ClearFieldCommand}" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="15,40,15,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="buttonCansel"  Content="Вийти" Grid.Column="1" Grid.Row="2" Command="{Binding ExitWindowCommand}" CommandParameter="{Binding ElementName=window, Mode=OneWay}" HorizontalAlignment="Right" Margin="0,40,15,0" VerticalAlignment="Top" Width="100"/>



    </Grid>
</Window>
