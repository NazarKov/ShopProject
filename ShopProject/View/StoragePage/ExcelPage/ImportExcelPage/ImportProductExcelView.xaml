<Window x:Class="ShopProject.View.StoragePage.ExcelPage.ImportExcelPage.ImportProductExcelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ShopProject.ViewModel.StoragePage.ExcelPage.ImportExcelPage"
        mc:Ignorable="d"
        Title="Імпорт з Exel" Width="800" x:Name="window" MinHeight="600" >
    <Window.Resources>
        <local:ImportProductExelViewModel x:Key="VM"></local:ImportProductExelViewModel>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource VM}"></Binding>
    </Window.DataContext>
    <Grid>
        <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
 
        <TextBlock Text="Імпорт товарів з Excel"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>
 
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="0 0 0 15"
                    Grid.Row="1">

            <Button Content="Обрати Excel-файл"
                    Width="180"
                    Height="40"
                    Margin="0 0 15 0"
                    Command="{Binding OpenFileExel}"/>

            <TextBlock x:Name="SelectedFileText"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="Gray"
                       Text="{Binding NameFile}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 10 0 10" Grid.Row="2" VerticalAlignment="Top">

                <ComboBox Name="Page" Height="40" SelectedIndex="{Binding SelectPage}" Margin="0,0,10,0" VerticalContentAlignment="Center" ItemsSource="{Binding Pages }"></ComboBox>


            <TextBlock Text="Рядок з:" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <TextBox x:Name="StartRowBox" Width="60" Height="25" VerticalContentAlignment="Center" Text="{Binding TopRow}" Margin="0 0 20 0"/>

            <TextBlock Text="по:" VerticalAlignment="Center"  Margin="0 0 10 0"/>
            <TextBox x:Name="EndRowBox" Width="60" Height="25" VerticalContentAlignment="Center" Text="{Binding BottomRow}" />
            
            <Button x:Name="OpenMappingButton"
                    Content="Відкрити призначення стовпчиків"
                    Width="230"
                    Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Command="{Binding OpenMappingPanelCommand}" />

        </StackPanel> 
        <DataGrid x:Name="ProductsGrid"
                  ItemsSource="{Binding Table}"
                  Grid.Row="3" 
                  ColumnWidth="*"
                  VerticalAlignment="Stretch"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  FontSize="16" 
                  RowHeight="40"
                  GridLinesVisibility="None"
                  AlternatingRowBackground="#F9F9F9"
                  RowBackground="White"
                  BorderBrush="LightGray"
                  BorderThickness="1"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalScrollBarVisibility="Hidden" 
                  VerticalGridLinesBrush="#E0E0E0">
 
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="CadetBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="BorderBrush" Value="#517a7b"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
 
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers> 
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger> 
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
 
        <StackPanel Orientation="Horizontal" Height="50" Margin="0 10 0 10" Grid.Row="4">
            <Button Content="Імпортувати в базу"
                    Width="200"
                    Height="45" 
                    HorizontalAlignment="Left"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Visibility="Visible"
                    x:Name="ImportButton" Command="{Binding SaveItemDb}" />
            <Button Content="вийти"
                    Width="200"
                    Height="45" 
                    HorizontalAlignment="Right"
                    Background="IndianRed"
                    Foreground="White"
                    FontWeight="Bold"
                    Visibility="Visible"
                    x:Name="ExitPage" />
        </StackPanel> 
    </Grid>
        <Border x:Name="MappingPanel" Panel.ZIndex="1"
                  Background="White"
                  Width="300"
                  HorizontalAlignment="Right"
                  Visibility="{Binding MappingPanel}"
                  Padding="20"
                  BorderBrush="Gray"
                  BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Призначення стовпчиків" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition> 
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition> 
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Штрихкод">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers}" SelectedIndex="{Binding SelectColumns.ColumnBarCode}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Назва">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers}" SelectedIndex="{Binding SelectColumns.ColumnName}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Артикул">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers}" SelectedIndex="{Binding SelectColumns.ColumnArticule}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Ціна в грн">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers}" SelectedIndex="{Binding SelectColumns.ColumnPrice}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Кількість">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers }" SelectedIndex="{Binding SelectColumns.ColumnCount}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="5">
                        <TextBlock Text="Знижка">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers }" SelectedIndex="{Binding SelectColumns.ColumnDiscount}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="6">
                        <TextBlock Text="Одиниця виміру">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers }" SelectedIndex="{Binding SelectColumns.ColumnUnit}"></ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="7">
                        <TextBlock Text="Код UKTZED">

                        </TextBlock>
                        <ComboBox ItemsSource="{Binding Headers }" SelectedIndex="{Binding SelectColumns.ColumnCodeUKTZED}"></ComboBox>
                    </StackPanel>
                </Grid>  
            </StackPanel>
        </Border>
    </Grid>
 
</Window>
